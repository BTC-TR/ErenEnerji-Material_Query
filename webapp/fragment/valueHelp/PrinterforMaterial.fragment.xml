<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
>
    <Dialog title="{i18n>SetPrinters}">
        <l:Grid
            id="_IDGenGrid155"
            defaultSpan="XL12 L12 M12 S12"
        >
            <f:SimpleForm
                id="SimpleFormDisplay3544"
                minWidth="1024"
                maxContainerCols="2"
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanL="3"
                labelSpanM="3"
                emptySpanL="4"
                emptySpanM="4"
                columnsL="2"
                columnsM="2"
            >
                <Label
                    width="auto"
                    id="_IDGenLabel3521"
                    text="{i18n>Total}"
                />
                <Input
                    width="auto"
                    id="_IDGenInput3216"
                    value="{viewModel>/Total}"
                    submit="onChangeTotal"
                />
                <Label
                    width="auto"
                    id="_IDGenLabel35221"
                    text="{i18n>InputQuan}"
                />
                <Input
                    width="auto"
                    id="_IDGenInput32116"
                    value="{ path: 'viewModel>/InputQuan', type: 'sap.ui.model.type.Float', formatOptions: { minFractionDigits: 2, maxFractionDigits: 2 } }"
                    description="{viewModel>/InputMeins}"
                />
                <Label
                    width="auto"
                    id="_IDGenLabel3218"
                    text="{i18n>Printers}"
                />
                <Select
                    width="auto"
                    selectedKey="{viewModel>/PrinterKey}"
                    items="{ path: '/PrintListSet', sorter: { path: 'Pastandort' } }"
                    showSecondaryValues="true"
                    forceSelection="{viewModel>/forceSelection}"
                >
                    <core:ListItem
                        key="{Padest}"
                        text="{Padest}"
                        additionalText="{Pastandort}"
                    />
                </Select>
            </f:SimpleForm>
        </l:Grid>
        <buttons>
            <Button
                text="{i18n>close}"
                press="onClosePrinters"
                type="Reject"
            />
            <Button
                enabled="{=${viewModel>/Total} &amp;&amp; ${viewModel>/PrinterKey} &amp;&amp; ${viewModel>/InputQuan} ? true : false}"
                icon="sap-icon://save"
                press="onPrintProcess"
                type="Accept"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
